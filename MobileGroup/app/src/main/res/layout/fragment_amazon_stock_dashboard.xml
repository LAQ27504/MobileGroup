<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    tools:context=".AmazonStockDashboardFragment">
    <!--    android:backgroundTint="@color/primaryColor"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icon and Text -->
            <ImageView
                android:id="@+id/amazon_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/amazon_logo_small" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp" >

                <TextView
                    android:id="@+id/AMZN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AMZN"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/amazon_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Amazon_com_inc"
                    android:textSize="12sp"
                    android:textColor="@color/white_grey_40"/>
            </LinearLayout>

            <!-- Growth percentage -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/amazon_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amazon_stock"
                    android:textColor="#32D49D"
                    android:textSize="16sp"
                    android:layout_gravity="end"/>

                <TextView
                    android:id="@+id/amazon_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amazon_term"
                    android:textColor="@color/white_grey_40"
                    android:textSize="13sp"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Tab Section (Hourly/Daily/Weekly) -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="328dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/tab_background"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="#766AE4">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabHourly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hourly_term" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDaily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabWeekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Graph Section (Placeholder) -->
        <ImageView
            android:id="@+id/amazon_stock_line"
            android:layout_width="329dp"
            android:layout_height="223dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/amazon_stock_line"
            android:src="@drawable/amazon_stock_line" />

        <!-- Buy Coin Button -->
        <Button
            android:id="@+id/buy_coin_button"
            android:layout_width="194dp"
            android:layout_height="53dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:text="@string/buy_coin_button"
            android:textColor="@android:color/white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stock_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

